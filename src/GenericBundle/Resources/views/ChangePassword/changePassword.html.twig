{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <section class="Changelogin col-sm-offset-1 col-sm-3 col-xs-offset-1 col-xs-7">
        <div class="row">
            <label class="Titre col-lg-12">Changement de Mot de passe</label>
        </div>
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <form id="myForm" action="{{ path('password_changed') }}" method="POST" style="margin-bottom:20px;">

                    <input type="hidden" id="username" name="_username" value="{{ username }}">
                    <input class="champ" type="password" id="password" name="_password" required title="Password required" placeholder="Nouveau Mot de passe" data-icon="U"/>

                    <input class="champ" id="repassword" name="_repassword" type="password" required title="Password required"
                           placeholder="Retapez le mot de passe" data-icon="x"/>

                    <input class="button" type="button" id="btnsubmit" name="_btnsubmit" value="Confirmer" />

                </form>
            </div>
        </div>
    </section>
    <footer style="position: static; clear: both">
        <a style="color: white; text-decoration: none; font: 12px Arial; font-size: 16px; font-weight: bold;"
           class="col-lg-offset-1 col-lg-1">contactez-nous</a>
        <a style="color: white; text-decoration: none; font: 12px Arial; font-size: 16px; font-weight: bold;"
           class="col-lg-1">|</a>
        <a style="color: white; text-decoration: none; font: 12px Arial; font-size: 16px; font-weight: bold;text-align: left"
           class="col-lg-2" >mentions Légales</a>
    </footer>

    <script language="JavaScript">
        document.getElementById("btnsubmit").onclick = function(){
            var x = document.getElementById("repassword").value;
            var y = document.getElementById('password').value;

            if(x==y)
            {
                document.getElementById("myForm").submit();
            }
            else
            {
                alert('Les Champs ne sont pas les mêmes');
                document.getElementById("repassword").value = '';
            }
        };

    </script>
{% endblock fos_user_content %}
