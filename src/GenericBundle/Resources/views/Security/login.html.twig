{% extends "GenericBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Login{% endblock %}
{% block fos_user_content %}
    <section class="login col-xs-offset-1 col-xs-3" >
        <div class="row">
            <label class="Titre col-lg-12">Connectez vous</label>
        </div>
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path("metier_user_check") }}" method="POST">
                    <div class="row">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <input class="champ col-xs-12" type="text" id="username" name="_username" value="{{ last_username }}" required title="Username required" placeholder="{{ 'security.login.username'|trans }}" data-icon="U"/>

                    <input class="champ col-xs-12" id="password" name="_password" type="password" required title="Password required"
                           placeholder="{{ 'security.login.password'|trans }}" data-icon="x"/>

                    <input class="button col-xs-12" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>
                    <div class="row olvido">
                        <div class="col-lg-6" style="overflow: hidden;white-space: nowrap;text-overflow: ellipsis;">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me"><mark></mark> {{ 'security.login.remember_me'|trans }}</label>
                        </div>
                        <div class="col-lg-6" style="overflow: hidden;white-space: nowrap;text-overflow: ellipsis;">
                            <a href="{{ path('fos_user_resetting_request') }}" title="Récupérer mon mot de passe" style="color: white;">Mot de passe oublié?</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </section>
    <footer style="position: static; clear: both">
        <a style="color: white; text-decoration: none; font: 12px Arial; font-size: 16px; font-weight: bold;"
                class="col-lg-offset-1 col-lg-1">contactez-nous</a>
        <a style="color: white; text-decoration: none; font: 12px Arial; font-size: 16px; font-weight: bold;"
                class="col-lg-1">|</a>
        <a style="color: white; text-decoration: none; font: 12px Arial; font-size: 16px; font-weight: bold;text-align: left"
                class="col-lg-2" >mentions Légales</a>
    </footer>
{% endblock fos_user_content %}
