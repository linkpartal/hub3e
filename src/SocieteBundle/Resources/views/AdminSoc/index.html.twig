                <button type="button" class="btn btn-default dropdown-toggle"
                        data-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false"
                        style="padding:0;width: 100%; height: 20px; border-radius: 0; background: none; border: 0;color: white">
